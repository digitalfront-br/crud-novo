const mix = require('laravel-mix');

mix.js('resources/js/app.js', 'public/js')
    .postCss('resources/css/app.css', 'public/css', [
        require('postcss-import'),
        require('tailwindcss'),
    ])
    .copyDirectory('resources/app-assets', 'public/app-assets');

if (mix.inProduction()) {
    mix.version();
}